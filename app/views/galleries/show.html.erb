<%= render "shared/navbar"%>
<%= render 'shared/hero_small' %>
<div class="container">
    <div class="row">
        <div class="col-md-10 col-12">
            <%= render 'shared/featured_gallery' %>
        </div>
        <div class="col-md-2 col-12">
            <ul class="nav flex-column nav-tabs">
            <% @galleries.each do |gallery| %>
