<%= render 'shared/hero_small' %>
<div class="container">
    <%= form_with do %>
        <div class="row">
            <div class="col-12 col-md-6">
                <%= label_tag(:contact, "Name:") %>
                <%= text_field(:contact, :name, class: "form-control") %>
            </div>
            <div class="col-12 col-md-6">
                <%= label_tag(:contact, "Email:") %>
                <%= text_field(:contact, :email, class: "form-control") %>
            </div>
        </div>
        <div class="row">
            <div class="col-12">
                <%= label_tag(:contact, "Body:") %>
                <%= text_area(:contact, :body, class: "form-control") %>
               
            </div>
        </div>
        <div class="row mt-2">
            <div class="col-12">
                <%= submit_tag("Send",  class: "btn btn-primary mx-auto") %>
            </div>
        </div>
    <% end %>
</div>