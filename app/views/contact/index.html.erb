<%= content_for :title, "Savy Studios | Contact"%>
<%= content_for :head do %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'https://cdn.jsdelivr.net/npm/featherlight@1.7.14/release/featherlight.min.js', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'https://cdnjs.cloudflare.com/ajax/libs/bootstrap-datepicker/1.9.0/js/bootstrap-datepicker.min.js' %>
    <%= stylesheet_link_tag 'https://cdnjs.cloudflare.com/ajax/libs/bootstrap-datepicker/1.9.0/css/bootstrap-datepicker.min.css' %>
    <%= javascript_include_tag 'home.js' %>
<% end %>

<%= flash_messages %>
<%= render 'shared/hero_small' %>
<div class="container">
    <div class="row pt-2 justify-content-center">
        <div class="col-8">
            <%= render 'shared/rates' %>
        </div>
        <%= render 'shared/contact_form' %>
    </div>
</div>