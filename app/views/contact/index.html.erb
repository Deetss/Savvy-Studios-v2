<%= content_for :title, "Savy Studios | Contact"%>
<%= render 'shared/hero_small' %>
<div class="container">
    <h4 class="pb-3">If you want to get in touch I'll need a few details!</h4>
    <hr>
    <%= flash_messages %>
    <div class="row pt-2">
        <div class="col-4 text-center text-primary my-auto">
            <%= fa_icon "envelope 15x rotate-35" %>
        </div>
        <%= form_with class: "col" do %>
            <div class="row justify-content-start">
                <div class="col-9 col-md-4 pb-2">
                    <%= label_tag(:contact, "Name:") %>
                    <%= text_field(:contact, :name, class: "form-control") %>
                </div>
                <div class="col-9 pb-2 d-md-none">
                    <%= label_tag(:contact, "Email:") %>
                    <%= text_field(:contact, :email, class: "form-control") %>
                </div>
            </div>
            <div class="row d-none d-md-flex justify-content-start">
                <div class="col-md-4 pb-2">
                    <%= label_tag(:contact, "Email:") %>
                    <%= text_field(:contact, :email, class: "form-control") %>
                </div>
            </div>
            <div class="row justify-content-start">
                <div class="col-12 pb-2">
                    <%= label_tag(:contact, "Body:") %>
                    <%= text_area(:contact, :body, class: "form-control body-area") %>
                
                </div>
            </div>
            <div class="row mt-2 justify-content-start">
                <div class="col-12">
                    <%= submit_tag("Send",  class: "btn btn-primary mx-auto") %>
                </div>
            </div>
        <% end %>
    </div>
</div>